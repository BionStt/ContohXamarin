<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContohXamarin.DetailPasienPage" Title="Detail Pasien">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="txtPasienID" Text="{Binding PasienID}" FontSize="Medium" IsEnabled="False" FontAttributes="Bold" />
            <Entry x:Name="txtNama" Text="{Binding Nama}" FontSize="Medium" TextColor="Red"  />
            <Entry x:Name="txtAlamat" Text="{Binding Alamat}" TextColor="Blue"/>
            <Entry x:Name="txtUmur" Text="{Binding Umur}" TextColor="Orange" Keyboard="Numeric"  />
            <Entry x:Name="txtTelpon" Text="{Binding Telpon}" TextColor="Green" />
            <StackLayout Orientation="Horizontal">
                <Button x:Name="btnEdit" Text="Edit" Clicked="btnEdit_Clicked" />
                <Button x:Name="btnDelete" Text="Delete" Clicked="btnDelete_Clicked" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>