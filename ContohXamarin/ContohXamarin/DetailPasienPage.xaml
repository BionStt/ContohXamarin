<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContohXamarin.DetailPasienPage" Title="Detail Pasien">
    <ContentPage.Content>
        <StackLayout>
            <Entry Text="{Binding PasienID}" FontSize="Medium" FontAttributes="Bold" Placeholder="masukan pasien id" />
            <Entry Text="{Binding Nama}" FontSize="Medium" TextColor="Red" Placeholder="masukan nama" />
            <Entry Text="{Binding Alamat}" TextColor="Blue" Placeholder="masukan alamat" />
            <Entry Text="{Binding Umur}" TextColor="Orange" FontAttributes="Bold" Keyboard="Numeric" Placeholder="masukan umur" />
            <Entry Text="{Binding Telpon}" TextColor="Green" Placeholder="masukan telpon" />
            <StackLayout Orientation="Horizontal">
                <Button x:Name="btnEdit" Text="Edit" />
                <Button x:Name="btnDelete" Text="Delete" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>