<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContohXamarin.TambahPasienPage" Title="Tambah Pasien">
    <ContentPage.Content>
        <StackLayout>
            <Entry FontSize="Medium" x:Name="txtNama" TextColor="Red" Placeholder="masukan nama" />
            <Entry x:Name="txtAlamat" TextColor="Blue" Placeholder="masukan alamat" />
            <Entry x:Name="txtUmur" TextColor="Orange" FontAttributes="Bold" Keyboard="Numeric" Placeholder="masukan umur" />
            <Entry x:Name="txtTelpon" TextColor="Green" Placeholder="masukan telpon" />
            <StackLayout Orientation="Horizontal">
                <Button x:Name="btnTambah" Text="Tambah" Clicked="btnTambah_Clicked" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>